include ../base/head.pug

div(style='display:none;font-size:1px;color:#ffffff;line-height:1px;max-height:0px;max-width:0px;opacity:0;overflow:hidden;')
  | #{headline}
.bg
  div(style='margin:0px auto;max-width:100%;')
  table(align='center', border='0', cellpadding='0', cellspacing='0', role='presentation', style='width:100%;')
    tbody
      tr
        td(style='direction:ltr;font-size:0px;padding:0px;text-align:left;')
          .mj-column-per-100.mj-outlook-group-fix(style='font-size:0px;text-align:left;direction:ltr;display:inline-block;vertical-align:top;width:100%;')
            table(border='0', cellpadding='0', cellspacing='0', role='presentation', style='vertical-align:top;', width='100%')
              tr
                td(style='font-size:0px;word-break:break-word;')
                  a(href=brandUrl, style='display:block;padding: 40px 40px 10px;')
                    if brandIcon
                      div(style='height:42px;display:inline-block;margin: 0px;')
                        img(src=brandIcon, style='height:42px;width:100%;')
                    .text-primary(style='display:inline-block;padding: 16px 0px 0px;vertical-align:top;font-family:Futura, Avenir, sans-serif;font-size:21px;line-height:22px;text-align:left;')
                      | #{brandName}
              tr
                td(align='left', style='font-size:0px;padding:10px 40px;padding-top:0px;padding-bottom:30px;word-break:break-word;')
                  .text-tertiarary(style='font-family:Futura, Avenir, sans-serif;font-size:11px;line-height:16px;text-align:left;text-transform: uppercase;')
                    | #{brandTagline}

  .bg-secondary(style='margin:0px;padding:40px;max-width:100%;')
    table(align='center', border='0', cellpadding='0', cellspacing='0', role='presentation', style='width:100%;')
      tbody
        tr
          td(style='direction:ltr;font-size:0px;padding:20px 0;padding-bottom:20px;padding-top:0px;text-align:left;')
            .mj-column-per-100.mj-outlook-group-fix(style='font-size:0px;text-align:left;direction:ltr;display:inline-block;vertical-align:top;width:100%;')
              table(border='0', cellpadding='0', cellspacing='0', role='presentation', style='vertical-align:top;', width='100%')
                tr
                  td(align='center', style='font-size:0px;padding:10px 25px;padding-right:0px;padding-bottom:20px;padding-left:0px;word-break:break-word;')
                    .text-primary(style='font-family:Futura, Avenir, sans-serif;font-size:36px;font-weight:bolder;line-height:42px;text-align:left;')
                      | #{title}
                tr
                  td(align='center', style='font-size:0px;padding:10px 25px;padding-right:0px;padding-bottom:20px;padding-left:0px;word-break:break-word;')
                    | !{subtitle}
                if attachment
                  tr
                    td(align='left', style='font-size:0px;padding:0px 0px 20px;word-break:break-word;')
                      img(src=attachment, style='height:220px;max-width:320px;border-radius:3px;')
                tr
                  td(align='center', style='font-size:0px;padding:10px 0px;word-break:break-word;')
                    .text-secondary(style='font-family:Futura, Avenir, sans-serif;font-size:16px;line-height:21px;text-align:left;')
                      | !{message}
                if ctaUrl
                  tr
                      td(align='left', role='presentation', style='font-size:0px;padding:10px 0px;word-break:break-word;')
                        br
                        br
                        a(href=ctaUrl, style='display:inline-block;background:' + brandColor + ';color:white;font-family:Futura, Avenir, sans-serif;font-size:16px;font-weight:bolder;line-height:120%;margin:0;text-decoration:none;text-transform:none;padding:15px 45px;mso-padding-alt:0px;border-radius:3px;', target='_blank')
                          | #{ctaTitle}

  include ../base/change_settings.pug

  include ../base/footer.pug
